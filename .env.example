# Shared
ENV=local

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=exchange
POSTGRES_USER=exchange
POSTGRES_PASSWORD=exchange

# MinIO (S3-compatible)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
RAW_BUCKET=raw-objects

# Redpanda (Kafka)
KAFKA_BROKERS=redpanda:9092
TOPIC_RECORD_INGESTED_V1=record.ingested.v1
TOPIC_RECORD_INGESTED_V2=record.ingested.v2
TOPIC_DLQ=record.ingested.v1.dlq

# Auth (dev only)
JWT_ISSUER=datavant-style-exchange
JWT_AUDIENCE=datavant-style-exchange
JWT_SECRET=dev-secret-change-me

# Tokenizer
TOKENIZER_ADDR=http://tokenizer:8081
TOKENIZER_HMAC_SECRET=dev-tokenizer-secret-change-me
# Tokenizer service-to-service auth (required when ENV != local)
TOKENIZER_AUTH_TOKEN=dev-worker-token-change-me

# Service-to-service (dev only)
TOKENIZER_AUDIENCE=tokenizer
INGEST_AUDIENCE=ingest
WORKER_AUDIENCE=worker
GRAPHQL_AUDIENCE=graphql
